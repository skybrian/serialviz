{
  "scripts": {
    "build": "esbuild src/app.ts src/app.css --bundle --sourcemap --outdir=site",
    "check": "tsc --noEmit",
    "dev": "npm run build -- --servedir=site",
    "chrome": "open -a 'Google Chrome' http://127.0.0.1:8000/)",
    "build-for-test": "esbuild src/csv.ts src/csv-test.ts --outdir=test --platform=node --format=cjs",
    "test": "npm run check && npm run build-for-test && ava test/*-test.js"
  },
  "devDependencies": {
    "@types/w3c-web-serial": "^1.0.2",
    "ava": "^4.2.0",
    "ava-fast-check": "^5.0.0",
    "esbuild": "^0.14.38",
    "fast-check": "^2.24.0",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "xterm": "^4.18.0"
  }
}
